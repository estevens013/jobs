<%= form_for @user do |f| %>
<table>
	<tr>
		<td class="alignRight">
			User Name:
		</td>
		<td>
			<%= f.text_field :username %>
		</td>
	</tr>
	<tr>
		<td class="alignRight">
			Full Name:
		</td>
		<td>
			<%= f.text_field :fullname %>
		</td>
	</tr>
	<tr>
		<td class="alignRight">
			Email:
		</td>
		<td>
			<%= f.text_field :email %>
		</td>
	</tr>
	<tr>
		<td class="alignRight">
			New Password:
		</td>
		<td>
			<%= f.password_field :password %>
		</td>
	</tr>
	<tr>
		<td class="alignRight">
			Confirm Password:
		</td>
		<td>
			<%= f.password_field :password_confirmation %>
		</td>
	</tr>
	<tr>
		<td class="alignRight">
			Customer:
		</td>
		<td>
			<%= f.select :customer, Customer.all.collect {|e| [e.customername]} %>
			</td>
	</tr>
	<tr>
		<td class="alignRight">
			Admin:
		</td>
		<td>
			<%= f.check_box :admin, {}, 'yes', 'no'  %>
		</td>
	</tr>
	<tr class="alignCenter">
		<td colspan="2">
			<%= f.submit %>
		</td>
	</tr>
</table>
<% end %>